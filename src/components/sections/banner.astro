---
// src/pages/banner.astro
import "../../fonts/style.css";
---

<div class="relative w-full h-screen">
  <!-- Background image with overlay -->
  <div class="absolute inset-0">
    <img
      src="/img/banner.png"
      alt="Tattoo artist working"
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-black/60"></div>
  </div>

  <!-- Efecto de desvanecimiento gris superior e inferior -->
  <div
    class="absolute inset-0 pointer-events-none"
    style={{
      background: `
          linear-gradient(
            to bottom,
            rgba(0, 0, 0, 1) 0%,
            rgba(0, 0, 0, 0.8) 5%,
            rgba(0, 0, 0, 0.5) 10%,
            transparent 25%,
            transparent 75%,
            rgba(0, 0, 0, 0.5) 90%,
            rgba(0, 0, 0, 0.8) 95%,
            rgba(0, 0, 0, 1) 100%
          )
        `,
    }}
  >
  </div>

  <!-- Efecto de viÃ±eta para acentuar los bordes -->
  <div
    class="absolute inset-0 pointer-events-none"
    style={{
      boxShadow: `inset 0 0 150px rgba(0, 0, 0, 0.9)`,
    }}
  >
  </div>

  <!-- Content -->
  <div
    class="relative z-10 h-full flex flex-col items-center justify-center text-center px-4"
  >
    <img src="/img/logo.png" alt="Inker" class="w-24 md:w-32 mb-4" />

    <h1 class="text-[4.5rem] text-white mb-6 font-inter font-black">
      "Conectando generaciones de tinta"
    </h1>

    <div class="text-gray-200 text-[3rem] space-y-2 font-inter mt-10">
      <p>Conecta con la historia del tatuaje.</p>
      <p>Encuentra tu artista ideal con Inker</p>
    </div>
  </div>
</div>
