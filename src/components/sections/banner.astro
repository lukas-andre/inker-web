---
// src/pages/banner.astro
import "../../fonts/style.css";
---

<div class="relative w-full h-screen">
  <!-- Background image with overlay -->
  <div class="absolute inset-0">
    <img
      src="/img/banner.png"
      alt="Tattoo artist working"
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-black/60"></div>
  </div>

<!-- Efecto de desvanecimiento gris치ceo superior e inferior -->
<div
  class="absolute inset-0 pointer-events-none"
  style={{
    background: `
      linear-gradient(
        to bottom,
        rgba(255, 255, 255, 0.3) 0%,    /* Gris claro en la parte superior */
        rgba(255, 255, 255, 0.3) 10%,   /* Gris m치s claro con menos opacidad */
        transparent 20%,                 /* Transparente */
        transparent 80%,                 /* Transparente */
        rgba(255, 255, 255, 0.3) 90%,    /* Gris m치s claro en la parte inferior */
        rgba(255, 255, 255, 0.3) 100%    /* Gris claro en la parte inferior */
      )
    `,
  }}
>
</div>

  <!-- Efecto de vi침eta para acentuar los bordes -->
  <div
    class="absolute inset-0 pointer-events-none"
    style={{
      boxShadow: `inset 0 0 150px rgba(0, 0, 0, 0.9)`,
    }}
  >
  </div>

  <!-- Content -->
  <div
    class="relative z-10 h-full flex flex-col items-center justify-center text-center px-4"
  >
  <img src="/img/logo.png" alt="" style="width: 200px; height: auto;" class="mb-4" />

  <h1 class="text-[3rem] text-white mb-6 font-inter font-black">
    "Conectando generaciones de tinta"</h1>

    <div class="text-gray-200 text-[2rem] space-y-2 font-inter mt-10">
      <p>Conecta con la historia del tatuaje.</p>
      <p>Encuentra tu artista ideal con Inker</p>
    </div>
  </div>
</div>
