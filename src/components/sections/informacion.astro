---
// src/pages/informacion.astro
---

<div class="bg-[#0A0A0B] min-h-screen py-16 px-4 relative overflow-hidden">
    <!-- Decorative elements -->
    <img 
        src="/img/informacion/Vector.png" 
        alt="" 
        class="absolute top-10 left-10 w-8 h-8"
        aria-hidden="true"
    />
    <img 
        src="/img/informacion/Vector (1).png" 
        alt="" 
        class="absolute bottom-10 right-10 w-8 h-8"
        aria-hidden="true"
    />

    <!-- Main content -->
    <div class="container mx-auto max-w-6xl">
        <div class="text-center space-y-8">
            <!-- First row -->
            <h1 class="text-white text-6xl md:text-7xl font-bold">
                Amplia variedad
            </h1>

            <!-- Middle row with images and "Y" -->
            <div class="flex items-center justify-center gap-6 my-8">
                <div class="w-64 h-32 overflow-hidden rounded-full">
                    <img 
                        src="/img/informacion/image.png"
                        alt="Artista tatuador trabajando"
                        class="w-full h-full object-cover"
                    />
                </div>

                <span class="text-white text-6xl md:text-7xl font-bold">Y</span>

                <div class="w-64 h-32 overflow-hidden rounded-full">
                    <img 
                        src="/img/informacion/man-doing-tattoo-tattoo-salon 2 (1).png"
                        alt="Artista tatuador trabajando"
                        class="w-full h-full object-cover"
                    />
                </div>
            </div>

            <!-- Last row -->
            <h2 class="text-white text-6xl md:text-7xl font-bold">
                Alta calidad<span class="text-[#4318FF]">.</span>
            </h2>
        </div>
    </div>
</div>