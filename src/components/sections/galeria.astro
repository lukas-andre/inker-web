</section>

<style>
  /* Custom Properties */
  :root {
    --color-background: #0f0524;
    --color-accent: #3b28cc;
    --color-text: #ffffff;
    --color-overlay: rgba(15, 5, 36, 0.3);
    --font-nexa: "Nexa", sans-serif;
    --font-script: "Petit Formal Script", cursive;
  }

  .gallery-section {
    padding: 4rem 0 1rem;
    width: 100%;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .gallery-title {
    font-family: var(--font-script);
    color: var(--color-text);
    text-align: center;
    font-size: 3rem;
    margin-bottom: 3rem;
    position: relative;
  }

  .gallery-title::after {
    content: "";
    position: absolute;
    bottom: -0.5rem;
    left: 50%;
    transform: translateX(-50%);
    width: 100px;
    height: 2px;
    background-color: var(--color-accent);
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 0; /* Sin espacio entre imágenes */
  }

  .gallery-item {
    position: relative;
    border-radius: 4px;
    max-width: 100%;
    margin: 0; /* Sin margen para que las imágenes se peguen */
  }

  .gallery-image {
    width: 100%;
    height: auto;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .gallery-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: var(--color-overlay);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .gallery-item:hover .gallery-image {
    transform: scale(1.05);
  }

  .gallery-item:hover .gallery-overlay {
    opacity: 1;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .gallery-title {
      font-size: 2.5rem;
    }
    .gallery-grid {
      grid-template-columns: repeat(2, 1fr); /* Dos columnas en pantallas pequeñas */
    }
  }

  @media (max-width: 480px) {
    .gallery-section {
      padding: 2rem 0 1rem;
    }
    .gallery-title {
      font-size: 2rem;
      margin-bottom: 2rem;
    }
    .gallery-grid {
      grid-template-columns: 1fr; /* Una columna en pantallas muy pequeñas */
    }
  }

  /* Font Face Declaration */
  @font-face {
    font-family: "Nexa";
    src: url("/fonts/Nexa-Regular.woff2") format("woff2"),
         url("/fonts/Nexa-Regular.woff") format("woff");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "Nexa";
    src: url("/fonts/Nexa-Bold.woff2") format("woff2"),
         url("/fonts/Nexa-Bold.woff") format("woff");
    font-weight: bold;
    font-style: normal;
    font-display: swap;
  }
</style>
