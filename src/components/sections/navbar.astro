---
// Navbar.astro
const navItems = {
  left: ["Principal", "Nosotros"],
  right: ["App", "Testimonios"],
};

const currentPath = Astro.url.pathname;
---

<div class="w-full bg-[#0A031F]">
  <nav class="flex h-16 md:h-20 w-full max-w-2xl mx-auto items-center justify-between px-4 md:px-0 relative">
    {/* Logo - Alineado a la izquierda en móvil, centrado en desktop */}
    <div class="md:absolute md:left-1/2 md:top-1/2 md:-translate-x-1/2 md:-translate-y-1/2">
      <a href="/" class="block">
        <img src="/img/logo.png" alt="9inker" class="h-8 md:h-10 w-auto" />
      </a>
    </div>

    {/* Navegación izquierda - Solo Desktop */}
    <div class="hidden md:flex gap-2">
      {navItems.left.map((item) => (
        <a
          href={`/#${item.toLowerCase()}`}
          class:list={[
            "relative font-nexa text-sm tracking-wider text-[#94a3b8] hover:text-[#8b5cf6] transition-colors duration-300 group px-2 pb-2",
            { "text-white": currentPath === `/${item.toLowerCase()}` },
          ]}
        >
          {item}
          <span class="absolute bottom-0 left-0 h-0.5 w-full bg-[#94a3b8] transition-all duration-300 group-hover:bg-[#8b5cf6]" />
        </a>
      ))}
    </div>

    {/* Navegación derecha - Solo Desktop */}
    <div class="hidden md:flex gap-2">
      {navItems.right.map((item) => (
        <a
          href={`/#${item.toLowerCase()}`}
          class:list={[
            "relative font-nexa text-sm tracking-wider text-[#94a3b8] hover:text-[#8b5cf6] transition-colors duration-300 group px-2 pb-2",
            { "text-white": currentPath === `/${item.toLowerCase()}` },
          ]}
        >
          {item}
          <span class="absolute bottom-0 left-0 h-0.5 w-full bg-[#94a3b8] transition-all duration-300 group-hover:bg-[#8b5cf6]" />
        </a>
      ))}
    </div>

    {/* Botón de menú móvil 
    <button
      id="mobile-menu-button"
      class="md:hidden text-white hover:text-[#8b5cf6] transition-colors duration-300"
      aria-label="Menú"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"
        ></path>
      </svg>
    </button>
    */}
  </nav>
</div>