---
// Astro component frontmatter
---

<style>
    /* CSS Variables */
    :root {
      --background-dark: #0A051C;
      --card-background: #1A103C;
      --accent-purple: #6E3AFF;
      --text-white: #FFFFFF;
      --text-gray: #B4B4B4;
    }
  
    /* Font face declaration */
    @font-face {
      font-family: 'Nexa';
      src: url('/fonts/Nexa-Bold.woff2') format('woff2');
      font-weight: bold;
      font-style: normal;
      font-display: swap;
    }
  
    .app-section {
      background-color: var(--background-dark);
      padding: 6rem 2rem;
      overflow: hidden;
    }
  
    .container {
      max-width: 1200px;
      margin: 0 auto;
    }
  
    .header {
      text-align: center;
      margin-bottom: 4rem;
    }
  
    .title {
      font-family: 'Nexa', sans-serif;
      font-size: 3rem;
      color: var(--text-white);
      line-height: 1.2;
      margin-bottom: 1rem;
    }
  
    .title-accent {
      color: var(--accent-purple);
      display: inline-block;
    }
  
    .features-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 2rem;
      margin-bottom: 4rem;
    }
  
    .feature-card {
      background-color: var(--card-background);
      border-radius: 1rem;
      padding: 2rem;
      transition: transform 0.3s ease;
    }
  
    .feature-card:hover {
      transform: translateY(-5px);
    }
  
    .feature-icon {
      width: 48px;
      height: 48px;
      margin-bottom: 1.5rem;
      color: var(--accent-purple);
    }
  
    .feature-title {
      font-family: 'Nexa', sans-serif;
      color: var(--text-white);
      font-size: 1.5rem;
      margin-bottom: 1rem;
    }
  
    .feature-description {
      color: var(--text-gray);
      line-height: 1.6;
    }
  
    .partners {
      margin-top: 6rem;
      text-align: center;
    }
  
    .partners-title {
      font-family: 'Nexa', sans-serif;
      color: var(--text-white);
      font-size: 1.5rem;
      margin-bottom: 2rem;
      opacity: 0.8;
    }
  
    .partners-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
      gap: 2rem;
      align-items: center;
      justify-items: center;
    }
  
    .partner-logo {
      height: 40px;
      opacity: 0.7;
      transition: opacity 0.3s ease;
    }
  
    .partner-logo:hover {
      opacity: 1;
    }
  
    /* Responsive Design */
    @media (max-width: 768px) {
      .app-section {
        padding: 4rem 1rem;
      }
  
      .title {
        font-size: 2.5rem;
      }
  
      .features-grid {
        grid-template-columns: 1fr;
      }
  
      .partners-grid {
        grid-template-columns: repeat(3, 1fr);
        gap: 1.5rem;
      }
    }
  
    @media (max-width: 480px) {
      .title {
        font-size: 2rem;
      }
  
      .partners-grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }
  </style>
  
  <section class="app-section">
    <div class="container">
      <header class="header">
        <h2 class="title">
          Amplia variedad
          <span class="title-accent">y</span>
          <br />
          Alta calidad.
        </h2>
      </header>
  
      <div class="features-grid">
        <div class="feature-card">
          <div class="feature-icon">
